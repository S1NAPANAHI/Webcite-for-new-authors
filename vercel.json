{
  "version": 2,
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "buildCommand": "cd apps/frontend && pnpm install --no-frozen-lockfile && pnpm run build",
  "installCommand": "pnpm install",
  "regions": ["iad1"],
  "env": {
    "NODE_VERSION": "18.17.1",
    "NPM_RC_ARGS": "--shamefully-hoist"
  }
}