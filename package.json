{
  "name": "zoroasterverse",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/frontend && npm run dev",
    "build": "npm install && npm run build --workspace=frontend",
    "start": "cd apps/frontend && npm run start",
    "lint": "npm run lint --workspace=frontend",
    "vercel-build": "npm install && npm run build --workspace=frontend",
    "generate-types": "tsx scripts/generate-types.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "framer-motion": "^12.23.12",
    "marked": "^16.2.0",
    "quill": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
