{
  "name": "zoroasterverse",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "type-check": "tsc --noEmit -p .",
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm install && pnpm --filter frontend build",
    "start": "pnpm --filter frontend start",
    "lint": "pnpm --filter frontend lint",
    "vercel-build": "pnpm install && pnpm --filter frontend build",
    "generate-types": "tsx scripts/generate-types.ts"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "framer-motion": "^12.23.12",
    "marked": "^16.2.0",
    "quill": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
