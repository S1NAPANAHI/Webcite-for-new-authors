{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "buildCommand": "chmod +x build.sh && ./build.sh",
  "installCommand": "echo 'Skipping install - handled in build.sh'",
  "regions": ["iad1"],
  "env": {
    "NODE_VERSION": "18.17.1",
    "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
    "CI": "true"
  }
}