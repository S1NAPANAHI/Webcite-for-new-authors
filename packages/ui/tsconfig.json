{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@zoroaster/shared": ["../../packages/shared/dist"],
      "@zoroaster/shared/*": ["../../packages/shared/dist/*"]
