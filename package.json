{
  "name": "zoroasterverse",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "type-check": "tsc --noEmit -p .",
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm --filter @zoroaster/backend build && pnpm --filter @zoroaster/shared build && pnpm --filter @zoroaster/ui build && cd apps/frontend && pnpm build",
    "build:ui": "pnpm --filter @zoroaster/ui build",
    "build:frontend": "pnpm --filter frontend build",
    "start": "pnpm --filter frontend start",
    "lint": "pnpm --filter frontend lint",
    "vercel-build": "pnpm --filter @zoroaster/shared build && pnpm --filter @zoroaster/ui build && pnpm --filter frontend build && pnpm --filter backend build",
    "generate-types": "tsx scripts/generate-types.ts"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@nextui-org/react": "^2.6.11",
    "@supabase/supabase-js": "^2.39.0",
    "busboy": "^1.6.0",
    "framer-motion": "^12.23.12",
    "fs-extra": "^11.3.1",
    "marked": "^16.2.0",
    "quill": "^2.0.3",
    "uuid": "^12.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.2",
    "vite": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.3",
      "@types/react-dom": "^18.3.0",
      "esbuild": "^0.21.5",
      "zod": "^3.23.8"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  }
}