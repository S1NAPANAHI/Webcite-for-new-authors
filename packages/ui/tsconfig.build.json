{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "noEmitOnError": false,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*"]
}
